 {{#each product }}
<div class="container-fluid col-md-12">
	<div id="main">
		<div id="myCarousel" class="carousel slide" data-ride="carousel" style="height: 300px;width: 60%;margin-left: auto;margin-right: auto;">
			<!-- Indicators -->
			<ol class="carousel-indicators">
				<li data-target="#myCarousel" data-slide-to="0" class="active"></li>
				<li data-target="#myCarousel" data-slide-to="1"></li>
				<li data-target="#myCarousel" data-slide-to="2"></li>
			</ol>
			<!-- Wrapper for slides -->
			<div class="carousel-inner mycarousel" style="height:300px;">
				<div class="item active">
					<img src="/assets/banner/banner-sanpham1.png" alt="Los Angeles">
				</div>
				<div class="item">
					<img src="/assets/banner/banner-sanpham2.png" alt="Chicago">
				</div>

				<div class="item">
					<img src="/assets/banner/banner-sanpham3.png" alt="New york">
				</div>
			</div>
			<!-- Left and right controls -->
			<a class="left carousel-control" href="#myCarousel" data-slide="prev">
				<span class="glyphicon glyphicon-chevron-left"></span>
				<span class="sr-only">Previous</span>
			</a>
			<a class="right carousel-control" href="#myCarousel" data-slide="next">
				<span class="glyphicon glyphicon-chevron-right"></span>
				<span class="sr-only">Next</span>
			</a>
		</div><!--end slide promotion-->
		<br>
		<div class="btn-group btn-breadcrumb">
			<a href="#" class="btn btn-default">
				<i class="glyphicon glyphicon-home">
					Home
				</i>
			</a>
			<a href="#" class="btn btn-default">
				Túi xách nữ
			</a>
			<a href="#" class="btn btn-default">
				This product
			</a>
		</div><!--End breadcrumb-->
		<br><br>
		<div class="col-md-7" style="height: 700px">
			<img src="/assets/image/{{ this.image }}">
		</div><!--main picture product-->
		<div class="col-md-5" style="height: 300px;">
			<div id="nameitem">
				<h2>{{ this.name }}</h2>
			</div>
			<div id="priceitem">
				<h3>{{ this.price }}</h3>
			</div>
			<div class="selection" style="margin-top: 30px">
				<div id="selectionsize" class="col-md-8" >
					<div class="form-group">
						<select class="form-control">
							<option value="">Chọn kích cỡ bạn muốn</option>
							<option value="">Size 1</option>
							<option value="">Size 2</option>
							<option value="">Size 3</option>
						</select>
					</div>
				</div>
				<div id="selectionqty" class="col-md-4">
					<div class="form-group">
						<select class="form-control">
							<option value="">Chọn số lượng</option>
							<option value="">1 cái</option>
							<option value="">2 cái</option>
							<option value="">3 cái</option>
						</select>
					</div>
				</div>
			</div><!--end selection-->
			<div id="color">
				<h3>Color</h3>
				<div class="color">
					<a href="#"><img class="img-thumbnail" src="/assets/color/black.png" style="margin: 7px;width:50px"></a>
					<a href="#"><img class="img-thumbnail" src="/assets/color/red.png" style="margin: 7px;width:50px"></a>
					<a href="#"><img class="img-thumbnail" src="/assets/color/green.png" style="margin: 7px;width:50px"></a>
				</div>
			</div><!--end color chosen box-->
			<div class="text-center" style="margin-top:50px">
				<h4>20% OFF + FREE SHIPPING</h4>
				<h5>For All New Levi’s® Email Subscribers <a href="#" class="alert-link">Details</a> </h5>
			</div>
			<button type="button" class="btn btn-danger col-md-12">
				<h4>Add to your cart</h4>
			</button>
		</div><!-- infor about product-->
		<div id="slidebar" >
			<div class="col-md-6" style="margin-top: 0px">
				<a href="#">
					<img class="img-thumbnail" style="width: 150px"  src="/assets/Sanpham/sanpham1_1.jpg">
				</a>
				<a href="#">
					<img class="img-thumbnail" style="width: 150px"  src="/assets/Sanpham/sanpham1_2.jpg">
				</a>
			</div>
		</div><!--end slidebar-->
		<div id="detail">
			<div class="col-md-12" style="margin-top:10px">
				<h3 style="color:#777">
					<span class="glyphicon glyphicon-list-alt"/>
					Details
				</h3>
				<div class="content-detail">
					{{ this.description }}
				</div>
				<hr>
			</div>
		</div><!--end details-->
		<div id="other-products">
			<div class="col-md-12">
				<h3 style="color:#777">
					<span class=""/>
					CÁC SẢN PHẨM KHÁC
				</h3>
				<div class="row">
					<div id="myCarousel" class="carousel slide" data-interval="2000" data-ride="carousel" data-wrap="true">
						<!-- Indicators -->
						<ol class="carousel-indicators">
							<li data-target="#myCarousel" data-slide-to="0" class="active"></li>
							<li data-target="#myCarousel" data-slide-to="1"></li>
							<li data-target="#myCarousel" data-slide-to="2"></li>
						</ol>
						<!-- Wrapper for slides -->
						<div class="carousel-inner"">
							<div class="item active">
								<div class="row">
									<div class="col-xs-4">
										<a href="#">
											<img src="/assets/Sanpham/sanphamkhac_1.jpg" class="img-responsive" style="height: 300px">
										</a>
									</div>
									<div class="col-xs-4">
										<a href="#">
											<img src="/assets/Sanpham/sanphamkhac_2.jpg" class="img-responsive" style="height: 300px">
										</a>
									</div>
									<div class="col-xs-4">
										<a href="#">
											<img src="/assets/Sanpham/sanphamkhac_3.jpg" class="img-responsive" style="height: 300px">
										</a>
									</div>
								</div>
							</div>
							<div class="item">
								<div class="row">
									<div class="col-xs-4">
										<a href="#">
											<img src="/assets/Sanpham/sanphamkhac_4.jpg" class="img-responsive" style="height: 300px">
										</a>
									</div>
									<div class="col-xs-4">
										<a href="#">
											<img src="/assets/Sanpham/sanphamkhac_5.jpg" class="img-responsive" style="height: 300px">
										</a>
									</div>
									<div class="col-xs-4">
										<a href="#">
											<img src="/assets/Sanpham/sanphamkhac_6.jpg" class="img-responsive" style="height: 300px">
										</a>
									</div>
								</div>
							</div>					
						</div>
						<!-- Left and right controls -->
						<a class="left carousel-control" href="#myCarousel" data-slide="prev">
							<span class="glyphicon glyphicon-chevron-left"></span>
							<span class="sr-only">Previous</span>
						</a>
						<a class="right carousel-control" href="#myCarousel" data-slide="next">
							<span class="glyphicon glyphicon-chevron-right"></span>
							<span class="sr-only">Next</span>
						</a>
					</div>
				</div>
			</div>
		</div><!--end others product-->
	</div><!--end main-->
</div>
{{/each}}